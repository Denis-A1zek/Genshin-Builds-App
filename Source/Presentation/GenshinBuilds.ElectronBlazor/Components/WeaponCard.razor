@using GenshinBuilds.Application.Common.Models;
@using GenshinBuilds.Domain.Models;

<div class="card" style="max-width: 640px;">
    <div class="row no-gutters">
        <div class="col-md-4 image-block">
            <div class="image-span">
                <img src="@Weapon.Image" class="card-img" style="@RarityCssStyleHelper.BackgroundGradient[Weapon.Rarity]" alt="@Weapon.Name">
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                    
                <h5 class="card-title">@Weapon.Name</h5>
                <p class="card-text">
                    <div>
                        @for (int i = 0; i < (int)Weapon.Rarity; i++)
                        {
                            <svg class="star" style="margin: 3px;" fill="@RarityCssStyleHelper.StarColor[Weapon.Rarity]" width="16" height="16" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                            </svg>
                        }
                        <small class="text-muted weapon-type-text">@Weapon.WeaponType.ToString()</small>
                    </div>                                    
                </p>

                <p class="card-text">@Weapon.Description</p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public MinimalWeapon Weapon { get; set; }

    private bool _isEmpty = false;
}
